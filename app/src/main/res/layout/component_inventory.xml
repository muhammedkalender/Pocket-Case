<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCommon">

    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorUnique">

        <LinearLayout
            android:id="@+id/sceneMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/componentInventoryFilterPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp">

                <Button
                    android:id="@+id/componentInventoryFilterStattrak"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/stattrak" />


                <Button
                    android:id="@+id/componentInventoryFilterColor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:text="@string/Rarity" />

                <Button
                    android:id="@+id/componentInventoryFilterItemType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="@string/item_type" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:id="@+id/componentInventoryGrid"
                    android:layout_width="250dp"
                    android:layout_height="284dp"
                    android:layout_centerHorizontal="true"
                    android:columnCount="3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/componentInventoryPaginationInfoPanel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/componentInventoryInfoTotalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="2569656.55 $"
                    android:textColor="#FFF"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/componentInventoryInfoPages"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="6969/9999"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/componentInventoryPaginationMovePanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp">

                <Button
                    android:id="@+id/componentInventoryBackPage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/back" />

                <Button
                    android:id="@+id/componentInventoryNextPage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="@string/next" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>